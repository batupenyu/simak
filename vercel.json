{
    "version": 2,
    "builds": [
        {
            "src": "composer.json",
            "use": "@vercel/php",
            "config": {
                "installCommand": "composer install --optimize-autoloader --no-dev",
                "buildCommand": "npm install && npm run build"
            }
        }
    ],
    "outputDirectory": "public",
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],
    "exclude": [
        "vendor",
        "node_modules",
        ".git",
        ".env",
        "*.log",
        "npm-debug.log",
        "yarn-error.log",
        "composer.phar",
        "artisan",
        "phpunit.xml",
        "phpunit.xml.dist",
        "tests",
        "database/migrations",
        "database/factories",
        "database/seeders",
        "config/*.php",
        "!config/app.php",
        "!config/database.php",
        "resources",
        "routes",
        "bootstrap/cache",
        ".vscode",
        ".idea",
        ".fleet",
        "storage",
        "*.md",
        "README.md",
        ".gitignore",
        ".editorconfig",
        ".gitattributes",
        "Homestead.json",
        "Homestead.yaml",
        "auth.json",
        "public/scss",
        "public/js/bootstrap.min.js",
        "public/js/jquery.min.js",
        "public/js/popper.js",
        "public/css/.DS_Store",
        "public/fonts/.DS_Store",
        "public/scss/.DS_Store",
        "public/image-viewer.html",
        "public/images/photo",
        "public/images/img",
        "public/demo.pdf"
    ]
}

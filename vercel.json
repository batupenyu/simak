{
    "version": 2,
    "builds": [
        {
            "src": "composer.json",
            "use": "vercel-php@0.3.6",
            "config": {
                "installCommand": "composer install --optimize-autoloader --no-dev",
                "buildCommand": "npm install && npm run build"
            }
        }
    ],
    "outputDirectory": "public",
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ]
}
